<div class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to image_tag("icon-sm.png"), root_path%>
    </div>
    <ul class="nav navbar-nav">
      <li>
        <%= link_to new_poll_path do %>
          <i class="fa fa-bar-chart"></i> Polls
        <% end %>
      </li>
      <li>
        <%= link_to new_group_path do%>
          <i class="fa fa-users"></i> Groups
        <% end %>
      </li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <% if current_user %>
        <li><%= image_tag current_user.image_url, alt: current_user.name, style: 'width:' %></li>
        <li><%= link_to 'Profile', user_path(current_user) %></li>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
      <% else %>
        <li><%= link_to 'Sign in', '/users/sign_in' %></li>
      <% end %>
    </ul>
  </div>
</div>
